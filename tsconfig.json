{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "classic",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "es5",
        "types": [
            "reflect-metadata"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "types",
        "baseUrl": "src",        
        "inlineSources": false,
        "declaration": true,
        "declarationDir": "../types"
    },
    "exclude": [
        "node_modules"
    ]
}